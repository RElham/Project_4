<%- include('header') -%>

<section id="content">
    <img id="content-logo" src="/static/img/logo_mrcoffee.png" alt="Mr. Coffee's logo with the text MR. COFFEE in black color">
    
    <%if(ErrMsgEnabled){%>
        <p style="color: red;"><%= errMsg %></p><br>
    <%}%>

    <section class="form-submit" id="scheduleSubmit">
        <form method="post" action="/schedule">
            <div id="form-input">
                <!-- User -->
                <div class="label">
                    <label for="userId">Username *:</label>
                    <label class="alert" id="alertUserId"></label>
                    <br>
                </div>
                <strong><p><%= username %></p></strong><br>
                <!--<input type="number" name="schedule[userId]" value="username[i].username"><br> -->
                <!--<select class="inputTime" name="schedule[user]" id="schedule[user]">
                    <% for(let i = 0; i < username.length; i++) { %>
                    <option value="<%= username[i].user_id %>">
                        <%= username[i].username %> %>
                    </option>
                    <% } %>
                </select> -->
                <!-- Day -->
                <div class="label">
                    <label for="day">Day *:</label>
                    <br>
                </div>
                <!--<input type="number" name="schedule[day]" min="1" max="7" value="1"><br>-->
                <select class="inputTime" name="schedule[day]" id="schedule[day]">
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                    <option value="7">Sunday</option>
                </select>
                <!-- Start At -->
                <div class="label">
                    <label for="startAt">Start At *:</label>
                    <label class="alert" id="alertStartAt"></label>
                    <br>
                </div>
                <input type="number" name="schedule[startHr]" class="inputTime" min="01" max="12" value="9">&nbsp;&nbsp;:&nbsp;
                <input type="number" name="schedule[startMin]" class="inputTime" min="00" max="59" value="00">
                <br>
                <!-- End At -->
                <div class="label">
                    <label for="endAt">End At *:</label>
                    <label class="alert" id="alertEndAt"></label>
                    <br>
                </div>
                <input type="number" name="schedule[endHr]" class="inputTime" min="01" max="12" value="5">&nbsp;&nbsp;:&nbsp;
                <input type="number" name="schedule[endMin]" class="inputTime" min="00" max="59" value="00">
                <br>
                <!-- Button -->
                <input type="submit" value="Submit" id="submitSchedule" class="p-font-size-medium">
            </div>
        </form>
    </section>
    
    <br>
    <h2>Your Schedules</h2>
    <br>
    <div id="schedules">
        <% if (schedules.length === 0) { %>
            <p>You have no schedule yet!</p>
        <% } else { %>
            <% for(let i = 0; i < schedules.length; i++) { %>
                <p>
                  <strong><%= schedules[i].firstname %></strong>&nbsp;-&nbsp;<%= schedules[i].day %>&nbsp;<%= schedules[i].start_at %>-<%= schedules[i].end_at %>
                </p>
              <% } %>
        <% } %>
      </table>
    </div>
</section>

<%- include('footer') -%>